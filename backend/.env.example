# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/food-waste-management
# For MongoDB Atlas, use: mongodb+srv://username:password@cluster.mongodb.net/food-waste-management

# JWT Secret (Change this to a random secure string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Hugging Face AI API (for food image classification)
HUGGINGFACE_API_KEY=your-huggingface-api-key-here

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Admin Credentials (for seeding)
ADMIN_EMAIL=admin@foodwaste.com
ADMIN_PASSWORD=Admin@123
ADMIN_NAME=System Administrator
